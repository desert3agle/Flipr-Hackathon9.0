<div class="sidenav">
    <div class="login-main-text">
        <h1 class="text-center mb-3">
            <i class="fas fa-user-plus"></i> Register
        </h1>
        <h2>Mail Service<br> Register Page</h2>
        <p>Register from here to access.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="register-form">
            {{> _flash}}
            <form action="/user/register" method="POST">
                <div class="form-group">
                    <label for="name">User Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="User Name"
                        value={{saveData name}}>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Email" value={{saveData
                        email}}>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-black" value="Save">Register</button>
                    {{!-- <button class="btn btn-secondary " href="/user/login">Have an account ?</button> --}}
                    <a class="btn btn-secondary" href="/user/login" role="button">Have an account ?</a>
                </div>
                <div class="form-group">
                    <a class="btn btn-danger" href="/auth/google" role="button">
                        <i class="fab fa-google left"></i> Log In With Google
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>